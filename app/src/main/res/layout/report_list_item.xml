<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/PassageName"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"


        android:textSize="9dp"
        app:fontFamily="@font/alegreya_sans_sc"
        app:layout_constraintBaseline_toBaselineOf="@+id/PassageLabel"
        app:layout_constraintEnd_toStartOf="@id/PassageDateTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/PassageLabel" />

    <TextView
        android:id="@+id/StartofDateWords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="2dp"
        android:text="Date:"
        android:textSize="12dp"
        app:fontFamily="@font/julius_sans_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PassageDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PassageDate"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"

        android:text="TextView"
        android:textSize="10dp"
        app:fontFamily="@font/alegreya_sans_sc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PassageLabel"
        app:layout_constraintStart_toEndOf="@+id/StartofDateWords"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/PassageLabel"
        android:layout_width="51dp"
        android:layout_height="25dp"
        android:layout_marginEnd="7dp"
        android:text="Passage:"

        android:textSize="12dp"
        app:fontFamily="@font/alegreya_sans_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PassageName"
        app:layout_constraintStart_toEndOf="@+id/PassageDate"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/PassageDateTimeStampEntry"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"

        android:text="TextView"
        android:textSize="9dp"
        app:fontFamily="@font/alegreya_sans_sc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PassageDateTimeLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/PassageDateTimeLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:text="Date/Time Entered:"

        android:textSize="9dp"
        app:fontFamily="@font/alegreya_sans_sc_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PassageDateTimeStampEntry"
        app:layout_constraintStart_toEndOf="@+id/PassageName"
        app:layout_constraintTop_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>