<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.PassagesList">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Past Entries"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      app:fontFamily="@font/bellefair"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.061"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/termrecyclerview"
      android:layout_width="884dp"
      android:layout_height="374dp"
      android:layout_margin="5dp"
      android:layout_marginTop="134dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.644"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

  <Button
      android:id="@+id/AddNewReflection"
      android:layout_width="162dp"
      android:layout_height="63dp"
      android:layout_margin="20dp"
      android:layout_marginTop="53dp"
      android:layout_marginBottom="4dp"
      android:clickable="true"
      android:minWidth="48dp"
      android:minHeight="48dp"
      android:onClick="goToReflectionDetail"
      android:text="New Reflection"
      app:backgroundTint="@color/AltBlue"
      app:fontFamily="@font/alegreya_sans_sc"
      app:layout_constraintBottom_toBottomOf="parent"


      app:layout_constraintEnd_toStartOf="@+id/viewReports"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/termrecyclerview"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="?attr/actionModeCloseDrawable"
      tools:ignore="SpeakableTextPresentCheck" />

  <Button
      android:id="@+id/viewReports"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="27dp"
      android:layout_marginBottom="28dp"
      android:onClick="goToReports"
      android:text="Reports"
      app:backgroundTint="@color/LightPrimaryBlue"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/AddNewReflection"
      app:layout_constraintTop_toBottomOf="@+id/termrecyclerview"
      app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>